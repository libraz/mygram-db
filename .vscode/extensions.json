    "llvm-vs-code-extensions.vscode-clangd",

    // CMake language support and tools
    "ms-vscode.cmake-tools",
    "twxs.cmake",

    // Real-time error highlighting in editor (like ESLint inline errors)
    "usernamehw.errorlens",

    // YAML support for config files
    "redhat.vscode-yaml",

    // Git integration
    "eamodio.gitlens",

    // Documentation tools (auto-generate Doxygen comments)
    "cschlosser.doxdocgen"
  ]
}
