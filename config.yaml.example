# MygramDB Configuration Example

server:
  host: "0.0.0.0"
  port: 11211
  max_connections: 1000

mysql:
  host: "localhost"
  port: 3306
  user: "repl_user"
  password: "repl_password"
  database: "mydb"

tables:
  - name: "articles"
    primary_key: "id"
    text_source:
      # Single column mode
      column: "content"

      # OR concatenate multiple columns:
      # concat: ["title", "body"]
      # delimiter: " "

    filters:
      - name: "status"
        type: "int"
      - name: "category"
        type: "string"

index:
  # N-gram size (1=unigram, 2=bigram, etc.)
  ngram_size: 1

replication:
  # Starting GTID for MySQL replication
  # Format: "server_uuid:transaction_id"
  # Example: "3E11FA47-71CA-11E1-9E33-C80AA9429562:1"
  # To get current GTID: SELECT @@GLOBAL.gtid_executed;
  start_gtid: ""

  # Replication queue size
  queue_size: 10000
